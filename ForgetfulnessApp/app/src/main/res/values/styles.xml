<resources>
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- style.xml. -->
        <!--Dark Mode-->
        <item name="colorPrimary">#96D785</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="android:textColor">#000000</item>
        <item name="android:windowBackground">#ffffff</item>

    </style>
    <style name="CalendarTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyExpandedTitle" parent="@style/TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="MyCollapsedTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">18sp</item>
    </style>



    <style name="CustomCalendarMonth" parent="AppTheme">
        <item name="android:textColorPrimary">#000</item>
    </style>

    <style name="CustomCalendarDay" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">#000</item>
    </style>

    <style name="CustomCalendarWeek" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">#000</item>
    </style>

    <style name="DialogAnimation2">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
    </style>


    <style name="DialogAnimation1">
        <item name="android:windowEnterAnimation">@anim/slide_in_top_rotate</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>



    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#000</item>
        <item name="colorControlNormal">@color/transparent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColorPrimary">#000</item>
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>

    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="CustomTimePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:buttonBarButtonStyle">@style/CustomButtonBarButton</item>
        <item name="colorPrimary">@color/pink</item>
        <item name="colorOnPrimary">@color/pink</item>
    </style>



    <style name="CustomButtonBarButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@android:color/black</item> <!-- Siyah renk -->
    </style>





</resources>