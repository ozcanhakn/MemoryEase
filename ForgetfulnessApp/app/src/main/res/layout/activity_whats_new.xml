<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".SettingsActivity.WhatsNewActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardUpper"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardMaxElevation="8dp"
        app:cardBackgroundColor="@color/background_color"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="8dp">

        <ImageView
            android:id="@+id/backToButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor"
            android:fontFamily="@font/br_firma_semibold"
            android:textSize="18sp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="@string/memoryease_updates"/>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardUpper"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/br_firma_medium"
                android:layout_marginStart="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@color/textcolor"
                android:text="@string/new_updates1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/br_firma_medium"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:textSize="16sp"
                android:textColor="@color/textcolor"
                android:text="@string/new_updates2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/br_firma_medium"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:textSize="16sp"
                android:textColor="@color/textcolor"
                android:text="@string/new_updates3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/br_firma_medium"
                android:layout_marginStart="20dp"
                android:textSize="16sp"
                android:textColor="@color/textcolor"
                android:text="@string/new_updates4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/br_firma_medium"
                android:layout_marginStart="20dp"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/textcolor"
                android:text="@string/new_updates5"/>


            <RelativeLayout
                android:id="@+id/backToMainScreen"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/upgrade_for_pro_bg_box"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="@string/backto_main"
                    android:fontFamily="@font/br_firma_medium"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>