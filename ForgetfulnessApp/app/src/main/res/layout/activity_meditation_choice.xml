<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:overScrollMode="never"
    tools:context=".MeditationChoiceActivity">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />


        <TextView
            android:id="@+id/textCategoryMeditation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:textSize="20sp"
            android:fontFamily="@font/urbanist_black"/>

        <TextView
            android:id="@+id/textCategoryMeditationDesc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textCategoryMeditation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textColor="#EBEAEC"
            android:textSize="16sp"
            android:fontFamily="@font/br_firma_regular"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constrainedWidth="true"
            app:layout_constraintWidth_default="wrap"/>

        <TextView
            android:id="@+id/textCategoryMeditationDesc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textCategoryMeditationDesc1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#EBEAEC"
            android:textSize="16sp"
            android:fontFamily="@font/br_firma_regular"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constrainedWidth="true"
            app:layout_constraintWidth_default="wrap"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textCategoryMeditationDesc2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            />




        
        
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBanner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/recCategories"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="20dp"
            android:elevation="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/textBannerHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="#FFE7BF"
                    android:fontFamily="@font/garamond_regular"
                    android:textSize="20sp"
                    android:translationZ="90dp"
                    android:text="The Ocean Moon"
                    />

                <TextView
                    android:id="@+id/bannerDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/textBannerHeader"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="#F9F9FF"
                    android:translationZ="90dp"
                    android:textSize="16sp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/br_firma_regular"
                    android:layout_marginTop="5dp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintWidth_default="wrap"/>

                <TextView
                    android:id="@+id/bannerDesc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/bannerDesc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="#F9F9FF"
                    android:translationZ="90dp"
                    android:textSize="16sp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/br_firma_regular"
                    android:layout_marginTop="2dp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintWidth_default="wrap"
                    />

                <RelativeLayout
                    android:id="@+id/buttonStart"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="20dp"
                    android:translationZ="90dp"
                    android:background="@drawable/meditation_choice_start_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="START"
                        android:textColor="#3F414E"
                        android:textSize="15sp"
                        android:fontFamily="@font/br_firma_medium"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/bannerMeditation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:scaleType="centerCrop"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>





        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recSleep"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:layout_constraintTop_toBottomOf="@id/cardBanner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:overScrollMode="never"/>



    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>