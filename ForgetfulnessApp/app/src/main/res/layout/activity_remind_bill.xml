<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:scrollbars="none"
    android:overScrollMode="never"
    tools:context=".RemindBillActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="@string/billreminder"
            android:fontFamily="@font/br_firma_medium"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/allBillRemindCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/remindbill_open_win_back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/upperNavigationCons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvMonthYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:fontFamily="@font/br_firma_bold"
                        android:layout_marginEnd="16dp"
                        android:text="Month Year"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/btnPrevious"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="60dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/arrowleftwh"
                        />



                    <ImageView
                        android:id="@+id/btnNext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@+id/btnPrevious"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/arrowrightwh"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <LinearLayout
                    android:id="@+id/constraintWeekOfDays"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/upperNavigationCons"
                    android:layout_marginEnd="30dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/sunday1"
                        android:textColor="#fff"
                        android:fontFamily="@font/br_firma_medium"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/monday1"
                        android:textColor="#fff"
                        android:fontFamily="@font/br_firma_medium"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/tuesday1"
                        android:textColor="#fff"
                        android:fontFamily="@font/br_firma_medium"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/wednesday1"
                        android:textColor="#fff"
                        android:fontFamily="@font/br_firma_medium"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/thursday1"
                        android:textColor="#fff"
                        android:fontFamily="@font/br_firma_medium"
                        android:gravity="center"/>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/friday1"
                        android:textColor="#fff"
                        android:fontFamily="@font/br_firma_medium"
                        android:gravity="center"/>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/saturday1"
                        android:textColor="#fff"
                        android:fontFamily="@font/br_firma_medium"
                        android:gravity="center"/>


                </LinearLayout>

                <GridView
                    android:id="@+id/gridView"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="15dp"
                    android:numColumns="7"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@id/constraintWeekOfDays"
                    app:layout_constraintTop_toBottomOf="@+id/constraintWeekOfDays"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>









            </androidx.constraintlayout.widget.ConstraintLayout>



            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayoutBill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/allBillRemindCalendar"
                android:background="#000"
                android:layout_marginTop="20dp">


                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tabItemMyBill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bylocation"
                    app:tabTextColor="#fff"
                    />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tabItemMyBillCalculator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lastreminder"
                    app:tabTextColor="#fff"

                    />



            </com.google.android.material.tabs.TabLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPagerBill"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="#000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tabLayoutBill"/>


            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/tabLayoutBill"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>


</ScrollView>