<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    tools:context=".CreateReminder.CreateReminderTimeFragment"
    app:cardBackgroundColor="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintSelectSound"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">


                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_add_24"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@drawable/sound_meditation_play_button_bg"
                    android:layout_marginStart="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Select Reminder Sound"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textViewReminderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remindertitle"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintSelectSound"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/br_firma_medium"/>

            <ImageView
                android:id="@+id/micTitle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/mic_icon_50px"
                app:layout_constraintEnd_toEndOf="@+id/edtReminderTitle"
                app:layout_constraintTop_toBottomOf="@+id/constraintSelectSound"
                android:layout_marginTop="20dp"
                />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/clickAnimMicTitle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:visibility="gone"
                android:translationZ="90dp"
                app:lottie_rawRes="@raw/click_anim_lottie"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:layout_constraintEnd_toEndOf="@id/edtReminderTitle"
                app:layout_constraintTop_toBottomOf="@id/constraintSelectSound"/>


            <EditText
                android:id="@+id/edtReminderTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:fontFamily="@font/br_firma_medium"
                android:background="@drawable/reminder_alert_item_box_bg"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewReminderTitle"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/clickAnimTitle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"
                app:lottie_rawRes="@raw/click_anim_lottie"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewReminderTitle"/>

            <TextView
                android:id="@+id/textViewReminderDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reminder_desc"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/edtReminderTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/br_firma_medium"/>

            <ImageView
                android:id="@+id/micDescription"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/mic_icon_50px"
                app:layout_constraintEnd_toEndOf="@+id/edtReminderDesc"
                app:layout_constraintTop_toBottomOf="@+id/edtReminderTitle"
                />


            <EditText
                android:id="@+id/edtReminderDesc"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:fontFamily="@font/br_firma_medium"
                android:background="@drawable/reminder_alert_item_box_bg"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewReminderDesc"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/clickAnimDesc"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"
                app:lottie_rawRes="@raw/click_anim_lottie"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewReminderDesc"/>


            <LinearLayout
                android:id="@+id/linearrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@+id/edtReminderDesc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp">


                <EditText
                    android:id="@+id/locationDistance"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:inputType="number"
                    android:text="1"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:fontFamily="@font/br_firma_medium"
                    android:background="@drawable/reminder_alert_item_box_bg"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="KM"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:fontFamily="@font/br_firma_medium"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/textViewSelectDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blackColor"
                app:layout_constraintTop_toBottomOf="@id/linearrr"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/selectdate"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/br_firma_medium"
                android:textSize="15sp"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint10"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewSelectDateTime"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/reminder_alert_item_box_bg">




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">


                    <NumberPicker
                        android:id="@+id/numberPickerHour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/NumberPickerTheme"
                        android:solidColor="#fff"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="25sp"
                        android:layout_margin="10dp"
                        android:textColor="#000"
                        android:text=":"
                        android:fontFamily="@font/br_firma_bold"

                        />


                    <NumberPicker
                        android:id="@+id/numberPickerMinute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/NumberPickerTheme"
                        android:solidColor="#ffffff"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintBottom_toBottomOf="parent">



                    <ImageView
                        android:id="@+id/dateButton1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/calendaroverlay"/>


                    <TextView
                        android:id="@+id/dateButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:layout_gravity="center_horizontal|bottom"
                        android:text="00/00/0000"
                        />




                </LinearLayout>





            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/clickAnimTime"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"
                app:lottie_rawRes="@raw/click_anim_lottie"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewSelectDateTime"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/clickAnimDate"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"
                app:lottie_rawRes="@raw/click_anim_lottie"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="60dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewSelectDateTime"/>



            <TextView
                android:id="@+id/selectedReminderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/constraint10"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/br_firma_medium"
                android:text=""/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/boxWeekOfDay"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@+id/selectedReminderDate"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/reminder_alert_item_box_bg">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="2dp">

                        <RelativeLayout
                            android:id="@+id/relativeSunday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_margin="1dp"
                            android:background="@drawable/week_of_day_unselected_background">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000"
                                android:fontFamily="@font/br_firma_regular"
                                android:layout_centerInParent="true"
                                android:text="@string/p"/>


                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/relativeMonday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_margin="1dp"
                            android:background="@drawable/week_of_day_unselected_background">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/m"
                                android:textColor="#000"
                                android:fontFamily="@font/br_firma_regular"
                                android:layout_centerInParent="true"/>


                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/relativeTuesday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_margin="1dp"
                            android:background="@drawable/week_of_day_unselected_background">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/br_firma_regular"
                                android:text="@string/t"
                                android:textColor="@color/blackColor" />


                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/relativeWednesday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_margin="1dp"
                            android:background="@drawable/week_of_day_unselected_background">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/br_firma_regular"
                                android:text="@string/w"
                                android:textColor="@color/blackColor" />


                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="2dp">

                        <RelativeLayout
                            android:id="@+id/relativeThursday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_margin="1dp"
                            android:background="@drawable/week_of_day_unselected_background">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/t1"
                                android:textColor="@color/blackColor"
                                android:fontFamily="@font/br_firma_regular"
                                android:layout_centerInParent="true"/>


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeFriday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_margin="1dp"
                            android:background="@drawable/week_of_day_unselected_background">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/f"
                                android:textColor="@color/blackColor"
                                android:fontFamily="@font/br_firma_regular"
                                android:layout_centerInParent="true"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeSaturday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_margin="1dp"
                            android:background="@drawable/week_of_day_unselected_background">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/s"
                                android:textColor="@color/blackColor"
                                android:fontFamily="@font/br_firma_regular"
                                android:layout_centerInParent="true"/>


                        </RelativeLayout>
                    </LinearLayout>


                </LinearLayout>




            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/clickAnimDay"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"
                android:translationZ="90dp"
                app:lottie_rawRes="@raw/click_anim_lottie"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_marginEnd="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/selectedReminderDate"/>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:visibility="gone"
                android:id="@+id/constReminderIntervals"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/boxWeekOfDay"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp">
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/clockIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:thumb="@drawable/thumb_selector"
                    app:track="@drawable/track_selector"
                    android:checked="true"
                    android:layout_marginStart="20dp"
                    />




                <TextView
                    android:id="@+id/textSETtIME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/reminderintervals"
                    app:layout_constraintStart_toEndOf="@+id/clockIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:fontFamily="@font/br_firma_medium"
                    android:textSize="11sp"
                    android:textColor="#000"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/textIntervalsCertain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="11sp"
                    android:text="00.00"
                    android:fontFamily="@font/br_firma_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center_vertical"

                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/textSelectImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Image"
                android:textSize="16sp"
                android:fontFamily="@font/br_firma_medium"
                android:textColor="@color/blackColor"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/constReminderIntervals"
                app:layout_constraintStart_toStartOf="parent"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:visibility="gone"
                android:id="@+id/selectImageConstraint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textSelectImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <androidx.cardview.widget.CardView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="20dp"
                    >
                    <ImageView
                        android:id="@+id/iv_cp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/selectCategoryConstraint"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/selectImageConstraint"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/selectCate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:text="@string/select_category"
                    android:fontFamily="@font/sofia_pro_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <NumberPicker
                    android:id="@+id/textSelectCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#000"
                    style="@style/NumberPickerTheme"
                    android:solidColor="#fff"
                    android:fontFamily="@font/br_firma_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/clickAnimCategory"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                app:lottie_rawRes="@raw/click_anim_lottie"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/selectImageConstraint"/>





            <RelativeLayout
                android:id="@+id/relativeSetReminderButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/set_reminder_box_bg"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/selectCategoryConstraint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="@string/set_reminder"
                    android:textSize="16sp"
                    android:fontFamily="@font/br_firma_medium"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/clickAnimButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"
                app:lottie_rawRes="@raw/click_anim_lottie"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/selectCategoryConstraint"/>


            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp"
