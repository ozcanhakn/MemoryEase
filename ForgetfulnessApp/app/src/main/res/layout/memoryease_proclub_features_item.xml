<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#00FFFFFF"
    android:layout_marginTop="40dp"
    android:layout_marginStart="20dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageIconFeaturesPro"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/advice_guidebook_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textFeaturesPro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#fff"
        android:text="Advice"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintStart_toEndOf="@id/imageIconFeaturesPro"
        android:layout_marginStart="21dp"
        app:layout_constraintTop_toTopOf="parent"
        />


        <TextView
            android:id="@+id/textFeaturesProDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toBottomOf="@id/textFeaturesPro"
            app:layout_constraintStart_toEndOf="@id/imageIconFeaturesPro"
            android:layout_marginStart="21dp"
            android:text="Lorem Ipsum"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>