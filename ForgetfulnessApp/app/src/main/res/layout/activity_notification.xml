<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Example.NotificationActivity"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/br_firma_bold"
                android:textColor="#fff"
                android:text="What\'s available in"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/br_firma_regular"
                android:textColor="#fff"
                android:text="MemoryEase Games?"/>


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#A1A4B2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="choose your game and play now"
            android:textSize="14dp" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">


          <androidx.cardview.widget.CardView
              android:id="@+id/cardShuffleCardGame"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_marginStart="2.5dp"
              android:layout_marginEnd="2.5dp"
              android:layout_marginTop="5dp"
              android:elevation="8dp"
              app:cardElevation="8dp"
              app:cardCornerRadius="8dp"
              app:cardMaxElevation="8dp">


              <com.makeramen.roundedimageview.RoundedImageView
                  android:id="@+id/imageViewShuffleGamePhoto"
                  android:layout_width="match_parent"
                  android:layout_height="250dp"
                  android:src="@drawable/shuffle_card_game_bg_photo"
                  android:scaleType="centerCrop"
                  android:adjustViewBounds="true"
                  />

              <ImageView
                  android:id="@+id/memoryEaseLogoBlurGameShuffleCard"
                  android:layout_width="64dp"
                  android:layout_height="64dp"
                  android:layout_gravity="center"
                  android:src="@drawable/memoryeaselogoblur70"
                  android:translationZ="90dp"/>

              <TextView
                  android:id="@+id/textShuffleGameOfNameRecycler"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="20dp"
                  android:textSize="20sp"
                  android:textColor="#FFC97E"
                  android:text="Shuffle Card (5x4)"
                  android:fontFamily="@font/urbanist_medium"
                  android:layout_gravity="bottom|center_horizontal"/>


          </androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:id="@+id/cardShuffleCardGame6"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_marginStart="2.5dp"
              android:layout_marginEnd="2.5dp"
              android:layout_marginTop="5dp"
              android:elevation="8dp"
              app:cardElevation="8dp"
              app:cardCornerRadius="8dp"
              app:cardMaxElevation="8dp">


              <com.makeramen.roundedimageview.RoundedImageView
                  android:id="@+id/imageViewShuffleGamePhoto6"
                  android:layout_width="match_parent"
                  android:layout_height="250dp"
                  android:src="@drawable/shuffle_card_game_bg_photo"
                  android:scaleType="centerCrop"
                  android:adjustViewBounds="true"
                  />

              <ImageView
                  android:id="@+id/memoryEaseLogoBlurGameShuffleCard6"
                  android:layout_width="64dp"
                  android:layout_height="64dp"
                  android:layout_gravity="center"
                  android:src="@drawable/memoryeaselogoblur70"
                  android:translationZ="90dp"/>

              <TextView
                  android:id="@+id/textShuffleGameOfNameRecycler6"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="20dp"
                  android:textSize="20sp"
                  android:textColor="#FFC97E"
                  android:text="Shuffle Card (6x5)"
                  android:fontFamily="@font/urbanist_medium"
                  android:layout_gravity="bottom|center_horizontal"/>


          </androidx.cardview.widget.CardView>



      </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardShuffleCardGame3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="2.5dp"
                android:layout_marginEnd="2.5dp"
                android:layout_marginTop="5dp"
                android:elevation="8dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                app:cardMaxElevation="8dp">


                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imageViewShuffleGamePhoto3"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/shuffle_card_game_bg_photo"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    />

                <ImageView
                    android:id="@+id/memoryEaseLogoBlurGameShuffleCard3"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:src="@drawable/memoryeaselogoblur70"
                    android:translationZ="90dp"/>

                <TextView
                    android:id="@+id/textShuffleGameOfNameRecycler3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:textSize="20sp"
                    android:textColor="#FFC97E"
                    android:text="Shuffle Card (Match 3)"
                    android:fontFamily="@font/urbanist_medium"
                    android:layout_gravity="bottom|center_horizontal"/>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardObjectCardGame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="2.5dp"
                android:layout_marginEnd="2.5dp"
                android:layout_marginTop="5dp"
                android:elevation="8dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                app:cardMaxElevation="8dp">


                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imageViewObjectGamePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/object_sequence_game_card_bg_photo"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    />

                <ImageView
                    android:id="@+id/memoryEaseLogoBlurGameObject"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:src="@drawable/memoryeaselogoblur70"
                    android:translationZ="90dp"/>

                <TextView
                    android:id="@+id/textObjectGameOfNameRecycler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:textSize="20sp"
                    android:textColor="#FFC97E"
                    android:text="Object Game"
                    android:fontFamily="@font/urbanist_medium"
                    android:layout_gravity="bottom|center_horizontal"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardShoppingGame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="2.5dp"
                android:layout_marginEnd="2.5dp"
                android:layout_marginTop="5dp"
                android:elevation="8dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                app:cardMaxElevation="8dp">


                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imageViewShoppingGameRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/shopping_game_card_bg_photo"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    />

                <ImageView
                    android:id="@+id/memoryEaseLogoBlurShoppingGame"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:src="@drawable/memoryeaselogoblur70"
                    android:translationZ="90dp"/>

                <TextView
                    android:id="@+id/textShoppingGameOfNameRecycler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:textSize="20sp"
                    android:textColor="#FFC97E"
                    android:text="Shopping Game"
                    android:fontFamily="@font/urbanist_medium"
                    android:layout_gravity="bottom|center_horizontal"/>


            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>






</ScrollView>