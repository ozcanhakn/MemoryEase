<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="50dp"
    android:layout_marginStart="50dp"
    app:cardCornerRadius="10dp"
    android:layout_height="500dp"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/textViewReminderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remindertitle"
            android:textColor="#000"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/br_firma_medium"/>
        
        <ImageView
            android:id="@+id/micTitle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/mic_icon_50px"
            app:layout_constraintEnd_toEndOf="@+id/edtReminderTitle"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            />
        
        <EditText
            android:id="@+id/edtReminderTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:fontFamily="@font/br_firma_medium"
            android:background="@drawable/reminder_alert_item_box_bg"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewReminderTitle"/>

        <TextView
            android:id="@+id/textViewReminderDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reminder_desc"
            android:textColor="#000"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/edtReminderTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/br_firma_medium"/>
        <ImageView
            android:id="@+id/micDescription"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/mic_icon_50px"
            app:layout_constraintEnd_toEndOf="@+id/edtReminderDesc"
            app:layout_constraintTop_toBottomOf="@+id/edtReminderTitle"
            />


        <EditText
            android:id="@+id/edtReminderDesc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:fontFamily="@font/br_firma_medium"
            android:background="@drawable/reminder_alert_item_box_bg"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewReminderDesc"/>

        
        <LinearLayout
            android:id="@+id/linearLayoutLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edtReminderDesc"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:checked="true"
                android:thumb="@drawable/thumb_selector"
                app:track="@drawable/track_selector"/>


            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setlocation"
                android:layout_marginStart="20dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:fontFamily="@font/br_firma_medium"/>
            
            
            
        </LinearLayout>

        <fragment
            android:id="@+id/autocomplete_fragment1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:visibility="visible"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            class="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayoutLocation"/>

        <LinearLayout
            android:id="@+id/linearrr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/autocomplete_fragment1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp">


            <EditText
                android:id="@+id/locationDistance"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:inputType="number"
                android:text="1"
                android:textColor="#000"
                android:textAlignment="center"
                android:textSize="15sp"
                android:fontFamily="@font/br_firma_medium"
                android:background="@drawable/reminder_alert_item_box_bg"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="KM"
                android:textSize="15sp"
                android:textColor="#000"
                android:fontFamily="@font/br_firma_medium"
                />

        </LinearLayout>




        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/linearrr"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:checked="true"
            android:thumb="@drawable/thumb_selector"
            app:track="@drawable/track_selector"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/br_firma_medium"
            app:layout_constraintStart_toEndOf="@+id/switchTime"
            app:layout_constraintTop_toBottomOf="@+id/linearrr"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/settime"
            android:textColor="#000"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint10"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@+id/switchTime"
            android:layout_marginTop="20dp"
            android:visibility="visible"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/reminder_alert_item_box_bg">

            <ImageView
                android:id="@+id/oClockImage"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/clock_icon"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <TextView
                    android:id="@+id/textTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/br_firma_semibold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/oClockImage"/>

                <TextView
                    android:id="@+id/textSelectClock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="00.00"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textTime"
                    android:layout_marginStart="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:fontFamily="@font/br_firma_medium"/>

                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#000"
                    android:text="@string/date"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/br_firma_semibold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textSelectClock"/>

                <TextView
                    android:id="@+id/textSelectDate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:layout_marginStart="2dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textDate"
                    android:text="00.00.0000"
                    android:fontFamily="@font/br_firma_regular"

                    />

            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constReminderIntervals"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/constraint10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp">
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/clockIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:thumb="@drawable/thumb_selector"
                app:track="@drawable/track_selector"
                android:checked="true"
                android:layout_marginStart="20dp"
                />




            <TextView
                android:id="@+id/textSETtIME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/reminderintervals"
                app:layout_constraintStart_toEndOf="@+id/clockIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:fontFamily="@font/br_firma_medium"
                android:textSize="11sp"
                android:textColor="#000"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/textIntervalsCertain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="11sp"
                android:text="00.00"
                android:fontFamily="@font/br_firma_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center_vertical"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/selectCategoryConstraint"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/constReminderIntervals"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="12sp"
                android:text="@string/select_category"
                android:fontFamily="@font/sofia_pro_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/textSelectCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/click"
                android:textSize="12sp"
                android:textColor="#000"
                android:fontFamily="@font/br_firma_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>




        <RelativeLayout
            android:id="@+id/relativeSetReminderButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/set_reminder_box_bg"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/selectCategoryConstraint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="@string/set_reminder"
                android:textSize="16sp"
                android:fontFamily="@font/br_firma_medium"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeSetReminderButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>




</androidx.cardview.widget.CardView>