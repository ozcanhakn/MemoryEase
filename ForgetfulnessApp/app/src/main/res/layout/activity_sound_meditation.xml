<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".SoundMeditationActivity"
    android:id="@+id/scrollView"
    android:background="#000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardSound"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:id="@+id/relativeSoundBackButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="top"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:translationZ="90dp"
                android:background="@drawable/circle_background_categories">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/back_arrow"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/imageViewSoundMeditation"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>




        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_marginTop="15dp"
            android:text=""
            android:fontFamily="@font/br_firma_medium"
            app:layout_constraintTop_toBottomOf="@id/cardSound"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>

        <LinearLayout
            android:id="@+id/linearSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/textTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textMinute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#98A1BD"
                android:textSize="18sp"
                android:fontFamily="@font/garamond_regular"
                android:text="45"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#98A1BD"
                android:textSize="18sp"
                android:fontFamily="@font/br_firma_regular"
                android:text="min â€¢ "
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/textType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#98A1BD"
                android:textSize="18sp"
                android:fontFamily="@font/br_firma_regular"
                android:text="Sleep Music"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>


        <TextView
            android:id="@+id/textSoundDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#98A1BD"
            android:text=""
            android:fontFamily="@font/br_firma_regular"
            app:layout_constraintTop_toBottomOf="@id/linearSound"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            />




        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/white_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textSoundDesc"/>

        <TextView
            android:id="@+id/textRelated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Related"
            android:textSize="18sp"
            android:textColor="#fff"
            android:fontFamily="@font/br_firma_medium"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recRelated"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toBottomOf="@+id/textRelated"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            />

        <RelativeLayout
            android:id="@+id/playSoundButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/sound_meditation_play_button_bg"
            android:translationZ="90dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/recRelated"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/play"
                android:textColor="#fff"
                android:textSize="20sp"
                android:fontFamily="@font/br_firma_medium"
                android:layout_centerInParent="true"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/stopSoundButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/stop_sound_medi"
            android:translationZ="90dp"
            android:layout_gravity="bottom"
            android:visibility="gone"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/recRelated"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stop_playing"
                android:textColor="#000"
                android:textSize="20sp"
                android:fontFamily="@font/br_firma_medium"
                android:layout_centerInParent="true"/>


        </RelativeLayout>

        <Space
            app:layout_constraintTop_toBottomOf="@+id/playSoundButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>








    </androidx.constraintlayout.widget.ConstraintLayout>






</ScrollView>