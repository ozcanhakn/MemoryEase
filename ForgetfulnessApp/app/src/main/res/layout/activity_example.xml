<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".Example.ExampleActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/exampleBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/green_arrow_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/textGames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="@color/textcolor"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/games"/>

        <ImageView
            android:id="@+id/iconSudoku"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/sudoku_icon"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/textGames"
            app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/textSudoku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUDOKU"
        android:textColor="@color/textcolor"
        android:fontFamily="@font/poppins_semibold"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toEndOf="@id/iconSudoku"
        app:layout_constraintTop_toBottomOf="@id/textGames"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        />

    <LinearLayout
        android:id="@+id/linearSudoku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textSudoku"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonStartNewGame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:text="@string/new_game"
            android:onClick="onStartNewGameButtonClicked"
            android:textColor="#fff"
            android:fontFamily="@font/poppins_medium"
            android:textSize="18sp"
            android:background="@drawable/upgrade_for_pro_bg_box" />

        <Button
            android:id="@+id/buttonAddNewBoard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:onClick="onAddNewBoardButtonClicked"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="@string/add_new_board"
            android:fontFamily="@font/poppins_medium"
            android:background="@drawable/upgrade_for_pro_bg_box"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>


    </LinearLayout>


        <ImageView
            android:id="@+id/iconSuffleCard"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/shuffle_card_icon"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/linearSudoku"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/memory_game1"
        android:textColor="@color/textcolor"
        android:fontFamily="@font/poppins_semibold"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/iconSuffleCard"
        app:layout_constraintTop_toBottomOf="@+id/linearSudoku"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#fff"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/upgrade_for_pro_bg_box"
            android:text="@string/start_game_65"
            android:textSize="18sp"/>


        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#fff"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:textSize="18sp"
            android:background="@drawable/upgrade_for_pro_bg_box"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/start_game3"
            />

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/start_game_54"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/upgrade_for_pro_bg_box"
            android:fontFamily="@font/poppins_medium"
            />
    </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>





</ScrollView>