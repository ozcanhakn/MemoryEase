<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/textWelcomeBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/welcomeback"
        android:textColor="#000000"
        android:textSize="20sp"
        android:fontFamily="@font/br_firma_bold"
        android:layout_marginTop="60dp"/>

    <EditText
        android:id="@+id/emailEdittextLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:hint="Email address"
        android:textColor="#000000"
        android:textSize="16sp"
        android:fontFamily="@font/br_firma_medium"
        android:paddingStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/textWelcomeBack"
        android:background="@drawable/edittext_login_bg"
        tools:ignore="RtlSymmetry"
        android:autoText="true"
        />

    <EditText
        android:id="@+id/passwordEdittextLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:hint="Password"
        android:textColor="#000000"
        android:textSize="16sp"
        android:fontFamily="@font/br_firma_medium"
        android:paddingStart="20dp"
        android:visibility="visible"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/emailEdittextLogin"
        android:background="@drawable/edittext_login_bg"
        tools:ignore="RtlSymmetry"
        />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/passwordEdittextLogin"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:textColor="#15A17E"
        android:text="@string/forgotpass"
        />

    <RelativeLayout
        android:id="@+id/continueButtonLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/continue_button_createaccount_bg"
        app:layout_constraintTop_toBottomOf="@+id/forgotPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/continuee"
            android:textSize="20sp"
            android:textColor="#fff"
            android:fontFamily="@font/br_firma_medium"
            android:layout_centerInParent="true"/>

    </RelativeLayout>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/continueGoogleLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/continueButtonLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/sign_in_options_bg"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/colorful_google_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:fontFamily="@font/br_firma_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/continuegoogle"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textAlreadyHave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/donthaveanaccount"
        android:textColor="#000"
        android:fontFamily="@font/br_firma_regular"
        app:layout_constraintBottom_toTopOf="@id/textLogInLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/textLogInLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup"
        android:textColor="#15A17E"
        android:fontFamily="@font/br_firma_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="25dp"/>

    <TextView
        android:id="@+id/textVersionCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/blackColor"
        android:textSize="12sp"
        android:text="1.2024.03.17"
        android:fontFamily="@font/br_firma_medium"/>





</androidx.constraintlayout.widget.ConstraintLayout>