<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewMyLastReminder"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="vertical"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#272E24">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/card1DENEME"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/iconVoiceSpeech"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iconoir_voice"
                    android:translationZ="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="top|end"/>

                <ImageView
                    android:id="@+id/iconEditPencil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_boxs_edit_pen"
                    android:translationZ="90dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="end|bottom"/>

                <ImageView
                    android:id="@+id/imageVieww"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/parkinglot"
                    />
            </androidx.cardview.widget.CardView>





            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card1DENEME"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:textSize="12sp"
                android:fontFamily="@font/br_firma_semibold"
                android:textColor="#fff"
                android:text=""/>

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/textTitle"
                android:textColor="#fff"
                android:textSize="12sp"
                android:fontFamily="@font/br_firma_semibold"/>



            <RelativeLayout
                android:id="@+id/completeButton"
                android:layout_width="120dp"
                android:layout_height="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/complete_main_green_box_bg">

                <TextView
                    android:id="@+id/textCompleteStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/complete"
                    android:textSize="12sp"
                    android:textColor="#322B1D"
                    android:fontFamily="@font/br_firma_medium"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>


</androidx.cardview.widget.CardView>