<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment"
    android:background="#000">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/upperLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/questionHowSetReminder"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/questiongreen"/>

                <RelativeLayout
                    android:id="@+id/addReminderButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/item_add_reminder_box"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/addReminderText"
                        android:fontFamily="@font/br_firma_medium"
                        android:textColor="#EAE1D8"
                        android:layout_marginStart="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_add_yellow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"/>



                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/upperLinearPlanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/upperLinear"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">


                <RelativeLayout
                    android:id="@+id/addPlannerButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/fan_club_features_button"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_a_planner"
                        android:fontFamily="@font/br_firma_medium"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_baseline_add_24"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"/>



                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/upperLinearVoiceRecorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/upperLinearPlanner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">


                <RelativeLayout
                    android:id="@+id/addVoiceButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/voice_recorder_bg_main"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/voice_recorder"
                        android:fontFamily="@font/br_firma_medium"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_baseline_add_24"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"/>



                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/upperLinearBillReminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/upperLinearVoiceRecorder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">


                <RelativeLayout
                    android:id="@+id/addBillReminderButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/continue_button_createaccount_bg"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/billreminder"
                        android:fontFamily="@font/br_firma_medium"
                        android:textColor="@color/white"
                        android:layout_marginStart="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_baseline_add_24"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"/>



                </RelativeLayout>
            </LinearLayout>








            <TextView
                android:id="@+id/textMyLastReminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myLastReminder"
                android:fontFamily="@font/br_firma_medium"
                android:textSize="14sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/textcolor"
                app:layout_constraintTop_toBottomOf="@id/upperLinearBillReminder"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/seeAllButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:textSize="14sp"
                android:fontFamily="@font/br_firma_medium"
                android:text="@string/seeall"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/upperLinearBillReminder"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewMyLastReminder"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical"
                app:cardCornerRadius="15dp"
                app:layout_constraintTop_toBottomOf="@id/textMyLastReminder"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#272E24">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <androidx.cardview.widget.CardView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/card1DENEME"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:id="@+id/voiceButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/iconoir_voice"
                            android:translationZ="90dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="8dp"
                            android:visibility="gone"
                            android:layout_gravity="top|end"/>

                        <ImageView
                            android:id="@+id/editButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/main_boxs_edit_pen"
                            android:translationZ="90dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginEnd="8dp"
                            android:layout_gravity="end|bottom"/>

                        <ImageView
                            android:id="@+id/myLastReminderImage"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/parkinglot"
                            />
                    </androidx.cardview.widget.CardView>





                    <TextView
                        android:id="@+id/myLastReminderTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/card1DENEME"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="20dp"
                        android:textSize="12sp"
                        android:fontFamily="@font/br_firma_medium"
                        android:textColor="#fff"
                        android:text="I parked my car in the parking lot"/>

                    <TextView
                        android:id="@+id/myLastReminderDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Block B7-17th row"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="20dp"
                        app:layout_constraintTop_toBottomOf="@id/myLastReminderTitle"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:fontFamily="@font/br_firma_medium"/>



                    <RelativeLayout
                        android:id="@+id/completeStatusButton"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/complete_main_green_box_bg">

                        <TextView
                            android:id="@+id/statusIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/complete"
                            android:textSize="12sp"
                            android:textColor="#322B1D"
                            android:fontFamily="@font/br_firma_medium"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>



            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/unlockExclusiveButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/fan_club_features_button"
                app:layout_constraintTop_toBottomOf="@id/cardViewMyLastReminder"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:visibility="visible"
                android:layout_marginEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#322B1D"
                    android:textSize="14sp"
                    android:fontFamily="@font/br_firma_semibold"
                    android:layout_centerInParent="true"
                    android:text="@string/unlock_exclusive_bonus"/>


            </RelativeLayout>


            <TextView
                android:id="@+id/textRemindersNotYet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/unlockExclusiveButton"
                android:text="@string/notyetcompleted"
                android:textColor="@color/textcolor"
                android:fontFamily="@font/br_firma_semibold"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerRemindersNotYet"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textRemindersNotYet"
                android:layout_marginTop="30dp"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationView1"
                android:layout_width="250dp"
                android:layout_height="250dp"
                app:lottie_rawRes="@raw/astronaut5"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/textRemindersNotYet"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>


            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recyclerRemindersNotYet"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>