<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollview2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".UpgradeForProActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <RelativeLayout
        android:id="@+id/relativeUpperNavigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/funclub"
            android:textColor="#fff"
            android:textSize="15sp"
            android:fontFamily="@font/br_firma_semibold"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/textUpgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/relativeUpperNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp"
        android:text="@string/upgradeforpro"
        android:textSize="18sp"
        android:textColor="#fff"
        android:fontFamily="@font/br_firma_semibold"/>

    <RelativeLayout
        android:id="@+id/unlockExclusiveButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/fan_club_features_button"
        app:layout_constraintTop_toBottomOf="@id/textUpgrade"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#322B1D"
            android:textSize="14sp"
            android:fontFamily="@font/br_firma_semibold"
            android:layout_centerInParent="true"
            android:animation="@anim/text_anim"
            android:text="@string/unlock_exclusive_bonus"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:background="@drawable/upgradefor_pro_deal_box_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearDealSubs">

        <TextView
            android:id="@+id/textBestDeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/br_firma_medium"
            android:textSize="14sp"
            android:textColor="#322B1D"
            android:text="@string/bestDeal"
            android:layout_centerInParent="true"/>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearDealSubs"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/unlockExclusiveButton">




        <RelativeLayout
            android:id="@+id/oneTimeSubs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/pro_subs_box_bg">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_horizontal"
                    android:textSize="16sp"
                    android:fontFamily="@font/br_firma_medium"
                    android:text="@string/onetimeprice"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/br_firma_medium"
                    android:textSize="16sp"
                    android:text="@string/onetime"
                    />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

        <TextView
            android:id="@+id/hereEverythingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_marginTop="33dp"
            android:textSize="18sp"
            android:fontFamily="@font/br_firma_bold"
            android:text="@string/hereiseverythins"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/linearDealSubs"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardAdvice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardBackgroundColor="#000000"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/hereEverythingText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageIconAdvice"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_book_50"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/textFeaturesProAdvice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="@string/advice"
                        android:textColor="#fff"
                        android:fontFamily="@font/br_firma_semibold"
                        app:layout_constraintStart_toEndOf="@id/imageIconAdvice"
                        android:layout_marginStart="21dp"
                        app:layout_constraintTop_toTopOf="parent"
                        />


                    <TextView
                        android:id="@+id/textFeaturesProDescAdvice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#fff"
                        android:fontFamily="@font/br_firma_regular"
                        android:layout_marginEnd="30dp"
                        android:layout_marginStart="21dp"
                        android:text="@string/upgrade_pro_advice_info"/>

                </LinearLayout>



            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardBackgroundColor="#000000"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/cardAdvice"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageIconLocation"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/locationicon50"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/textFeaturesProLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="@string/reminderbylocation10"
                        android:textColor="#fff"
                        android:fontFamily="@font/br_firma_semibold"
                        app:layout_constraintStart_toEndOf="@id/imageIconAdvice"
                        android:layout_marginStart="21dp"
                        app:layout_constraintTop_toTopOf="parent"
                        />


                    <TextView
                        android:id="@+id/textFeaturesProDescLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#fff"
                        android:fontFamily="@font/br_firma_regular"
                        android:layout_marginEnd="30dp"
                        android:layout_marginStart="21dp"
                        android:text="@string/reminderbylocation11"/>

                </LinearLayout>



            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardStatistic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardBackgroundColor="#000000"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/cardLocation"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageIconStatistic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/bar_chart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/textFeaturesProStatistic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="@string/statistic"
                        android:textColor="#fff"
                        android:fontFamily="@font/br_firma_semibold"
                        app:layout_constraintStart_toEndOf="@id/imageIconStatistic"
                        android:layout_marginStart="21dp"
                        app:layout_constraintTop_toTopOf="parent"
                        />


                    <TextView
                        android:id="@+id/textFeaturesProDescStatistic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#fff"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginEnd="30dp"
                        android:layout_marginStart="21dp"
                        android:text="@string/upgrade_pro_statistic_info"/>

                </LinearLayout>



            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardNotificationAndWidget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#000000"
            android:layout_marginStart="20dp"
            app:cardCornerRadius="0dp"
            app:layout_constraintTop_toBottomOf="@+id/cardStatistic"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageIconWidget"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/noti_icon_48"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textFeaturesProWidget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#fff"
                        android:text="@string/notiandwidget"
                        android:fontFamily="@font/br_firma_semibold"
                        app:layout_constraintStart_toEndOf="@id/imageIconWidget"
                        android:layout_marginStart="21dp"
                        app:layout_constraintTop_toTopOf="parent"
                        />


                    <TextView
                        android:id="@+id/textFeaturesProDescWidget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:fontFamily="@font/br_firma_regular"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="21dp"
                        android:text="@string/upgrade_pro_notiandwitgets"/>

                </LinearLayout>



            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardThemeColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#000000"
            android:layout_marginStart="20dp"
            app:cardCornerRadius="0dp"
            app:layout_constraintTop_toBottomOf="@+id/cardNotificationAndWidget"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageThemeColor"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icons_color_palette_40"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textThemeColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/textcolor"
                        android:text="@string/themecolor1"
                        android:fontFamily="@font/br_firma_semibold"
                        app:layout_constraintStart_toEndOf="@id/imageThemeColor"
                        android:layout_marginStart="21dp"
                        app:layout_constraintTop_toTopOf="parent"
                        />


                    <TextView
                        android:id="@+id/textThemeColor1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textcolor"
                        android:textSize="14sp"
                        android:fontFamily="@font/br_firma_regular"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="21dp"
                        android:text="@string/theme_color"/>

                </LinearLayout>



            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMuchAppreciation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#000000"
            app:cardCornerRadius="0dp"
            app:cardPreventCornerOverlap="true"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/cardThemeColor"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageHeart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/heart_icon_50"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textMuchAppreciation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#fff"
                        android:text="@string/muchappreci"
                        android:fontFamily="@font/br_firma_semibold"
                        app:layout_constraintStart_toEndOf="@id/imageHeart"
                        android:layout_marginStart="21dp"
                        app:layout_constraintTop_toTopOf="parent"
                        />


                    <TextView
                        android:id="@+id/textMuchAppreciation1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:fontFamily="@font/br_firma_regular"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="21dp"
                        android:text="@string/much_appreciation"/>

                </LinearLayout>



            </LinearLayout>


        </androidx.cardview.widget.CardView>
        
        <TextView
            android:id="@+id/textInfoForSubs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upgradeinfo1"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:textSize="13sp"
            android:textColor="#adadad"
            android:fontFamily="@font/br_firma_regular"
            app:layout_constraintTop_toBottomOf="@id/cardMuchAppreciation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>

        <RelativeLayout
            android:id="@+id/goTop"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/upgrade_for_pro_bg_box"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@id/textInfoForSubs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/go_top"
                android:textSize="15sp"
                android:textColor="#fff"
                android:fontFamily="@font/br_firma_medium"
                android:layout_centerInParent="true"/>

        </RelativeLayout>









        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardNotificationAndWidget"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>