<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="20dp"
    android:layout_marginEnd="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/calenderImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_calendar_today_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/itemDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/br_firma_medium"
                app:layout_constraintStart_toEndOf="@id/calenderImage"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:text="01.01.1979"
                />

            <ImageView
                android:id="@+id/itemViewMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_more_horiz_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                />

            <ImageView
                android:id="@+id/editPencilButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_edit_24"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/itemViewMore"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="15dp"/>

            <ImageView
                android:id="@+id/deleteTrashButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/ic_baseline_delete_24"
                app:layout_constraintEnd_toStartOf="@+id/editPencilButton"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="15dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
        
        <TextView
            android:id="@+id/itemHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:fontFamily="@font/br_firma_bold"
            android:text="The headings appear here"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemNotes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="The notes appear here."
                android:layout_marginStart="20dp"
                android:fontFamily="@font/br_firma_regular"
                android:textSize="15sp"
                android:textColor="#949BA5"/>


            <TextView
                android:id="@+id/textMoreButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/viewmore"
                android:fontFamily="@font/br_firma_regular"
                android:layout_marginStart="5dp"
                android:visibility="gone"
                android:textSize="15sp"
                android:textColor="#ADADAD"/>





        </LinearLayout>



        <TextView
            android:id="@+id/textLessButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/less"
            android:fontFamily="@font/br_firma_regular"
            android:layout_marginStart="20dp"
            android:visibility="gone"
            android:textSize="15sp"
            android:textColor="#ADADAD"/>


   





    </LinearLayout>



</androidx.cardview.widget.CardView>