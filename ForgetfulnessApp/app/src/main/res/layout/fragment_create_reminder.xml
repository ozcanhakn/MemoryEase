<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    tools:context=".CreateReminder.CreateReminderLocationFragment"
    app:cardBackgroundColor="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewReminderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remindertitle"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/br_firma_medium"/>

            <ImageView
                android:id="@+id/micTitle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/mic_icon_50px"
                app:layout_constraintEnd_toEndOf="@+id/edtReminderTitle"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/edtReminderTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:fontFamily="@font/br_firma_medium"
                android:background="@drawable/reminder_alert_item_box_bg"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewReminderTitle"/>

            <TextView
                android:id="@+id/textViewReminderDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reminder_desc"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/edtReminderTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/br_firma_medium"/>
            <ImageView
                android:id="@+id/micDescription"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/mic_icon_50px"
                app:layout_constraintEnd_toEndOf="@+id/edtReminderDesc"
                app:layout_constraintTop_toBottomOf="@+id/edtReminderTitle"
                />


            <EditText
                android:id="@+id/edtReminderDesc"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:fontFamily="@font/br_firma_medium"
                android:background="@drawable/reminder_alert_item_box_bg"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewReminderDesc"/>



            <fragment
                android:id="@+id/autocomplete_fragment2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:visibility="visible"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                class="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edtReminderDesc"/>

            <LinearLayout
                android:id="@+id/linearrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@+id/autocomplete_fragment2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp">


                <EditText
                    android:id="@+id/locationDistance"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:inputType="number"
                    android:text="1"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:fontFamily="@font/br_firma_medium"
                    android:background="@drawable/reminder_alert_item_box_bg"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="KM"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:fontFamily="@font/br_firma_medium"
                    />

            </LinearLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constReminderIntervals"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#fff"
                app:layout_constraintTop_toBottomOf="@id/linearrr"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp">
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/clockIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:thumb="@drawable/thumb_selector"
                    app:track="@drawable/track_selector"
                    android:checked="true"
                    android:layout_marginStart="20dp"
                    />




                <TextView
                    android:id="@+id/textSETtIME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/reminderintervals"
                    app:layout_constraintStart_toEndOf="@+id/clockIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:fontFamily="@font/br_firma_medium"
                    android:textSize="11sp"
                    android:textColor="#000"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/textIntervalsCertain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="11sp"
                    android:text="00.00"
                    android:fontFamily="@font/br_firma_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center_vertical"

                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/selectCategoryConstraint"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/constReminderIntervals"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:text="@string/select_category"
                    android:fontFamily="@font/sofia_pro_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <NumberPicker
                    android:id="@+id/textSelectCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#000"
                    style="@style/NumberPickerTheme"
                    android:solidColor="#fff"
                    android:fontFamily="@font/br_firma_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>




            <RelativeLayout
                android:id="@+id/relativeSetReminderButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/set_reminder_box_bg"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/selectCategoryConstraint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="@string/set_reminder"
                    android:textSize="16sp"
                    android:fontFamily="@font/br_firma_medium"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>


            <TextView
                android:id="@+id/textViewInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Whatareminderbylocationdoes"
                app:layout_constraintTop_toBottomOf="@id/relativeSetReminderButton"
                android:fontFamily="@font/br_firma_medium"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/textViewInfo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/Whatareminderbylocationdoes1"
                app:layout_constraintTop_toBottomOf="@id/textViewInfo"
                android:fontFamily="@font/br_firma_medium"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/textViewInfo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/Whatareminderbylocationdoes2"
                app:layout_constraintTop_toBottomOf="@id/textViewInfo1"
                android:fontFamily="@font/br_firma_medium"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"/>


            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewInfo2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>




</androidx.cardview.widget.CardView>