<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShoppingGameActivity"
    android:background="@drawable/shopping_game_bg">


    <TextView
        android:id="@+id/memoryHeroText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MemoryHero"
        android:textSize="30sp"
        android:textColor="#fff"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <ImageView
        android:id="@+id/memoryEaseLogoShoppingGame"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/memoryeaselogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/gameDescription1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/startShoppingGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/memoryherodesc1"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#fff"/>
    <Button
        android:id="@+id/startShoppingGame"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#fff"
        android:text="Oyuna BaÅŸla"
        android:fontFamily="@font/poppins_bold"
        android:textSize="16sp"
        android:background="@drawable/shopping_cart_button_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>