<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Arka plan için lineer gradyan -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#36333B"
                android:endColor="#48454D"
                android:angle="180" />
            <corners android:radius="15dp"/>
        </shape>
    </item>

    <!-- Stroke ve iç dolgu -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle"
            >
            <!-- Stroke -->
            <stroke
                android:width="1dp"
                android:color="#14ffffff" />
            <!-- İç dolgu -->
            <solid android:color="#14ffffff" />
            <!-- Drop shadow -->
            <padding android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp" />
            <corners android:radius="15dp" />
            <gradient
                android:startColor="#14ffffff"
                android:endColor="#2D2B31"
                android:angle="180" />
        </shape>
    </item>

</layer-list>
